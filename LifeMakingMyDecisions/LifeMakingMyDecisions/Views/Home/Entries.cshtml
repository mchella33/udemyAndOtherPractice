@using LifeMakingMyDecisions.Models
@model LifeMakingMyDecisions.Models.EntriesViewModel
@{
    ViewBag.Title = "Entries";
}

<h2>Entries</h2>

@using (Html.BeginForm())
{

    <fieldset>

        <div class="editor-label">
            @Html.LabelFor(model => model.Caption)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Caption)
            @Html.ValidationMessageFor(model => model.Caption)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Submitter)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Submitter)
            @Html.ValidationMessageFor(model => model.Submitter)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Blog)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Blog)
            @Html.ValidationMessageFor(model => model.Blog)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Url)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Url)
            @Html.ValidationMessageFor(model => model.Url)
        </div>

        <p>
            <input type="submit" value="Submit" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Stories", "Entries")
</div>
